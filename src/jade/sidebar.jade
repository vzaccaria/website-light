mixin sidebar__link_item(icon, name, link)
   li.sidebar__link_item(onclick="location.href='#{link}'", style="cursor: pointer")
     span.sidebar__link_item__icon.fa-stack
       i.fa.fa-stack-2x.fa-circle
       i.sidebar__link_item__icon__inner.fa.fa-stack-1x.fa-inverse(class=icon)
     .sidebar__link_item__name=name



.sidebar
   img.sidebar__picture(src=require("file?name=assets/[name].[ext]!../img/sidebar_picture.jpg"), style="cursor:pointer", onclick="location.href='/#/'")
   .sidebar__name(style="cursor:pointer", onclick="location.href='#/'") Vittorio Zaccaria
   .sidebar__address Politecnico di Milano

   ul.sidebar__link_list
     +sidebar__link_item('fa-home'           , 'Home'     , "#/")
     +sidebar__link_item('fa-flask'          , 'Research' , "#/research")
     +sidebar__link_item('fa-quote-left'     , 'Blog'     , "#/blog")
     +sidebar__link_item('fa-floppy-o'       , 'Projects' , "#/projects")
     +sidebar__link_item('fa-graduation-cap' , 'Teaching' , "#/teaching")
     +sidebar__link_item('fa-user'           , 'CV'       , "https://dl.dropboxusercontent.com/u/5867765/docs/cv.pdf")
     +sidebar__link_item('fa-youtube-play'   , 'Videos'   , "#/videos")
     +sidebar__link_item('fa-map-marker'     , 'Address'  , "#/address")

   .sidebar__bottom
     .sidebar__bottom__button(onclick="location.href='http://www.linkedin.com/in/vzaccaria'", style="cursor: pointer")
       i.fa.fa-linkedin-square
     .sidebar__bottom__button(onclick="location.href='http://twitter.com/_vzaccaria_'", style="cursor: pointer")
       i.fa.fa-twitter-square
     .sidebar__bottom__button(onclick="location.href='https://plus.google.com/116322227495215922957/about'", style="cursor: pointer")
       i.fa.fa-google-plus-square
